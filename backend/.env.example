# Environment Variables Template
# Copy this file to .env and fill in your actual values

# ========================================
# DATABASE
# ========================================
MONGO_URI=mongodb://localhost:27017/notes-app
# For MongoDB Atlas (Production):
# MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/notes-app

# ========================================
# SERVER
# ========================================
PORT=5000
NODE_ENV=development
# Options: development, production

# ========================================
# JWT AUTHENTICATION
# ========================================
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRE=15m
REFRESH_TOKEN_SECRET=your_refresh_token_secret_change_this_in_production
REFRESH_TOKEN_EXPIRE=7d

# ========================================
# EMAIL SERVICE
# ========================================
# Option 1: Resend (Recommended for production)
RESEND_API_KEY=re_your_resend_api_key_here
EMAIL_FROM=Notes App <noreply@yourdomain.com>

# Option 2: Gmail SMTP (For development)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=your_email@gmail.com
# EMAIL_PASSWORD=your_gmail_app_password
# EMAIL_FROM=Notes App <your_email@gmail.com>

# Verification
VERIFICATION_CODE_EXPIRE=10m

# ========================================
# GOOGLE OAUTH
# ========================================
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_CALLBACK_URL=http://localhost:5000/api/auth/google/callback
# Production: https://your-api-domain.com/api/auth/google/callback

# ========================================
# CLOUDINARY (File Uploads)
# ========================================
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# ========================================
# GOOGLE GEMINI AI
# ========================================
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-pro

# ========================================
# FRONTEND URL
# ========================================
CLIENT_URL=http://localhost:5173
# Production: https://your-frontend-domain.com

# ========================================
# OPTIONAL
# ========================================
# Enable scheduler in development (default: production only)
# ENABLE_SCHEDULER=true

# Test database (for automated tests)
# MONGO_URI_TEST=mongodb://localhost:27017/notes-test
